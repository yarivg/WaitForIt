<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bigsizeclassicmenu">

    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/logout"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/logoutbtn"
        android:layout_gravity="center|left|top"
        android:scaleType="fitXY" />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginTop="90dp"
        android:src="@drawable/shareonfacebook"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:id="@+id/sharefacebookbtn"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:onClick="onClick" />

    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/about"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:id="@+id/aboutbtn"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:layout_marginBottom="115dp"
        android:scaleType="fitXY" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginTop="20dp"
        android:src="@drawable/setdefaulttime"
        android:layout_width="340dp"
        android:layout_height="65dp"
        android:id="@+id/settimebtn"
        android:layout_gravity="center"
        android:onClick="onClick"
        android:scaleType="fitXY" />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginTop="155dp"
        android:src="@drawable/contactus"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:id="@+id/contactusbtn"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:onClick="onClick" />

    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/rateus"
        android:layout_width="340dp"
        android:layout_height="55dp"
        android:id="@+id/rateusbtn"
        android:layout_gravity="center"
        android:onClick="onclick"
        android:scaleType="fitXY"
        android:layout_marginBottom="50dp" />

    <ImageView
        android:background="@android:color/transparent"
        android:layout_width="170dp"
        android:layout_height="55dp"
        android:id="@+id/settingtitle"
        android:layout_gravity="left|top"
        android:scaleType="fitXY"
        android:src="@drawable/settingtitle"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/backbtn1"
        android:layout_gravity="center_horizontal|bottom"
        android:scaleType="fitXY"
        android:src="@drawable/backbutton"
        android:background="@android:color/transparent"
        android:layout_marginBottom="5dp" />

</FrameLayout>
