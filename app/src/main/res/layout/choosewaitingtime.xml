<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/backclassicmenu">


    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/min1"
        android:layout_width="180dp"
        android:layout_height="170dp"
        android:id="@+id/waitingtime"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/waitingtimetitle"
        android:layout_width="250dp"
        android:layout_height="90dp"
        android:id="@+id/categorytitle"
        android:scaleType="fitXY"
        android:layout_gravity="left|top" />

    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/settings"
        android:scaleType="fitXY"
        android:layout_gravity="left|top"
        android:onClick="clicksetting" />

    <ImageButton
        android:layout_marginBottom="10dp"
        android:src="@drawable/startwaiting"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/startwaiting"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="15dp"
        android:onClick="onClick" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/plusbutton"
        android:layout_gravity="right|center_vertical"
        android:src="@drawable/plus"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_marginRight="5dp" />

    <ImageButton
        android:layout_width="85dp"
        android:layout_height="85dp"
        android:id="@+id/minusbutton"
        android:layout_gravity="left|center_vertical"
        android:src="@drawable/minus"
        android:scaleType="fitXY"
        android:background="@android:color/transparent"
        android:layout_marginLeft="5dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/previousbutton"
        android:layout_gravity="left|bottom"
        android:src="@drawable/previousbutton"
        android:scaleType="fitXY"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/e3e3e3" />

</FrameLayout>
