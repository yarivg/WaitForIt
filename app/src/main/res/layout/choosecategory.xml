<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bigsizeclassicmenu">


    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="80dp"
        android:src="@drawable/videos"
        android:layout_width="120dp"
        android:layout_height="95dp"
        android:id="@+id/videosbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:onClick="onClick" />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/games"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/gamesbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:onClick="onClick" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginRight="80dp"
        android:src="@drawable/news"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/newsbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp" />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginLeft="80dp"
        android:src="@drawable/puzzles"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/puzzlesbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="5dp" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginTop="130dp"
        android:layout_marginRight="80dp"
        android:src="@drawable/jokes"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/jokesbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="80dp"
        android:src="@drawable/music"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:id="@+id/musicbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/choosecategory"
        android:layout_width="180dp"
        android:layout_height="35dp"
        android:id="@+id/categorytitle"
        android:scaleType="fitXY"
        android:layout_gravity="left|top" />

    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/settings"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/settings"
        android:scaleType="fitXY"
        android:layout_gravity="left|top"/>

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginBottom="10dp"
        android:src="@drawable/nextbutton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:scaleType="fitXY"
        android:id="@+id/nextbuttonnn"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="15dp" />


</FrameLayout>
