<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bigsizeclassicmenu">


    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginBottom="120dp"
        android:layout_marginRight="90dp"
        android:src="@drawable/videos"
        android:layout_width="@dimen/f560choosecategory_option_width"
        android:layout_height="@dimen/f560choosecategory_option_height"
        android:id="@+id/videosbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:onClick="onClick" />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginBottom="120dp"
        android:layout_marginLeft="90dp"
        android:src="@drawable/games"
        android:layout_width="@dimen/f560choosecategory_option_width"
        android:layout_height="@dimen/f560choosecategory_option_height"
        android:id="@+id/gamesbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:onClick="onClick" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginRight="90dp"
        android:src="@drawable/news"
        android:layout_width="@dimen/f560choosecategory_option_width"
        android:layout_height="@dimen/f560choosecategory_option_height"
        android:id="@+id/newsbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp" />
    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginLeft="90dp"
        android:src="@drawable/puzzles"
        android:layout_width="@dimen/f560choosecategory_option_width"
        android:layout_height="@dimen/f560choosecategory_option_height"
        android:id="@+id/puzzlesbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="15dp" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginTop="150dp"
        android:layout_marginRight="90dp"
        android:src="@drawable/jokes"
        android:layout_width="@dimen/f560choosecategory_option_width"
        android:layout_height="@dimen/f560choosecategory_option_height"
        android:id="@+id/jokesbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />

    <ImageView
        android:layout_marginTop="85dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/choosecategory"
        android:layout_width="240dp"
        android:layout_height="55dp"
        android:id="@+id/categorytitle"
        android:scaleType="fitXY"
        android:layout_gravity="left|top" />

    <ImageButton
        android:background="@android:color/transparent"
        android:src="@drawable/settings"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/settings"
        android:scaleType="fitXY"
        android:layout_gravity="left|top"
        android:onClick="onclick" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginBottom="10dp"
        android:src="@drawable/nextbutton"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:scaleType="fitXY"
        android:id="@+id/nextbuttonnn"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="20dp"
        android:onClick="onclick" />

    <ImageButton
        android:background="@android:color/transparent"
        android:layout_marginLeft="90dp"
        android:src="@drawable/music"
        android:layout_width="@dimen/f560choosecategory_option_width"
        android:layout_height="@dimen/f560choosecategory_option_height"
        android:id="@+id/musicbutton"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        android:layout_marginTop="150dp" />


</FrameLayout>
