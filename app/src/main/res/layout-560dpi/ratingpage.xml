<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bigsizebeforegame">


    <ImageButton
        android:src="@drawable/sababa"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:id="@+id/sabababutton"
        android:layout_gravity="center"
        android:onClick="onclick"
        android:scaleType="fitXY"
        android:layout_marginBottom="60dp"
        android:background="@android:color/transparent" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="00:00"
        android:id="@+id/timertxt"
        android:layout_gravity="right|top"
        android:textSize="34dp"
        android:textColor="#ffffff"
        android:layout_marginRight="33dp"
        android:layout_marginTop="38dp" />
    <ImageButton
        android:src="@drawable/notsababa"
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:id="@+id/notsabababutton"
        android:layout_gravity="center"
        android:background="@android:color/transparent"
        android:onClick="onclick"
        android:scaleType="fitXY"
        android:layout_marginTop="80dp" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="55dp"
        android:id="@+id/settingtitle"
        android:layout_gravity="left|top"
        android:scaleType="fitXY"
        android:src="@drawable/ratingtitle"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp" />

    <ImageButton
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/backbuttoninrating"
        android:layout_gravity="left|top"
        android:scaleType="fitXY"
        android:src="@drawable/exitplaylist"
        android:background="@android:color/transparent"
        android:layout_marginBottom="5dp" />

</FrameLayout>
